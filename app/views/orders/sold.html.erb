<h1>Here are the meals that you have sold or donated</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Cuisine</th>
      <th>Description</th>
      <th>Price</th>
      <th>Available date</th>
      <th>Sold</th>
      <th>User</th>
      <th>Allergy</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sold_items.each do |item| %>
      <tr>
        <td><%= item.listing.title %></td>
        <td><%= item.listing.cuisine %></td>
        <td><%= item.listing.description %></td>
        <td><%= item.listing.price %></td>
        <td><%= item.listing.available_date %></td>
        <td><%= item.listing.buyer.username %></td>
        <td><%= item.listing.allergy.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>