<p id="notice"><%= notice %></p>

<h1>Listings</h1>
<div>
  <form action="/search">
    <input name= "q" type="text" placeholder="search" aria-label="search">
    <button type="submit">Search</button>
  </form>
</div>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Cuisine</th>
      <th>Description</th>
      <th>Allergy</th>
      <th>Date Available</th>
      <th>Price</th>
      <th>Sold</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.title %></td>
        <td><%= listing.cuisine %></td>
        <td><%= listing.description %></td>
        <td><%= listing.allergy.name %></td>
        <td><%= listing.available_date %></td>
        <td><%= listing.price %></td>
        <td><%= listing.sold %></td>
        <td><%= listing.user.address.suburb %></td>
        <td><%= link_to 'View this meal!', listing %></td>
        <%# user see options of edit/destroy if they own the listing %>
        <% if current_user && current_user.id == listing.user_id %>
            <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
            <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Listing', new_listing_path %>
