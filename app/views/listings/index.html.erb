<p id="notice"><%= notice %></p>

<h1>Listings</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Cuisine</th>
      <th>Description</th>
      <th>Price</th>
      <th>Available date</th>
      <th>Sold</th>
      <th>User</th>
      <th>Allergy</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.title %></td>
        <td><%= listing.cuisine %></td>
        <td><%= listing.description %></td>
        <td><%= listing.price %></td>
        <td><%= listing.available_date %></td>
        <td><%= listing.sold %></td>
        <td><%= listing.user_id %></td>
        <td><%= listing.allergy_id %></td>
        <td><%= link_to 'Show', listing %></td>
        <%# user see options of edit/destroy if they own the listing %>
        <% if current_user.id == listing.user_id %>
            <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
            <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

