<p id="notice"><%= notice %></p>

<%# user attaching image and if there is none attached %>
<div>
  <% if @listing.image.attached? %>
      <%= image_tag @listing.image, alt: @listing.title %>
  <% else %>
    <%= image_tag "/assets/images/loading.jpg", alt: @listing.title %>
  <% end %>
</div>

<p>
  <strong>Title:</strong>
  <%= @listing.title %>
</p>

<p>
  <strong>Cuisine:</strong>
  <%= @listing.cuisine %>
</p>

<p>
  <strong>Description:</strong>
  <%= @listing.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @listing.price %>
</p>

<p>
  <strong>Available date:</strong>
  <%= @listing.available_date %>
</p>

<p>
  <strong>Sold:</strong>
  <%= @listing.sold %>
</p>

<p>
  <strong>User:</strong>
  <%= @listing.user_id %>
</p>

<p>
  <strong>Allergy:</strong>
  <%= @listing.allergy_id %>
</p>

<%# user not see options if they don't own the listing %>
<% if current_user.id == @listing.user_id %>
    <%= link_to 'Edit', edit_listing_path(@listing) %> |
<% end %>

<%= link_to 'Back', listings_path %>
